# Production Environment Variables Template
# Copy and update these in your deployment platform

# ============================================
# BACKEND ENVIRONMENT VARIABLES (Railway/Render)
# ============================================

# Database (provided by platform)
DATABASE_URL=postgresql://user:password@host:port/database?schema=public

# Server Configuration
NODE_ENV=production
PORT=5001

# Frontend URL (update after Vercel deployment)
CLIENT_URL=https://your-app.vercel.app

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=GENERATE_STRONG_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_STRONG_SECRET_HERE
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Registration
REGISTRATION_TOKEN_EXPIRY=48h

# Redis (if using Redis addon)
REDIS_URL=redis://default:password@host:port

# Admin Default User (for initial setup)
ADMIN_PHONE=0501234567
ADMIN_PASSWORD=ChangeThisStrongPassword123!
ADMIN_NAME=מנהל מערכת

# Optional Services
# ----------------

# Sentry Error Tracking
SENTRY_DSN=

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Notifications (generate at https://vapidkeys.com)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=mailto:admin@yourdomain.com

# ============================================
# FRONTEND ENVIRONMENT VARIABLES (Vercel)
# ============================================

# Backend API URL (update after backend deployment)
VITE_API_URL=https://your-backend.onrender.com/api

# App Configuration
VITE_APP_NAME=ShiftBalance
VITE_APP_VERSION=1.0.0

# PWA Configuration
VITE_ENABLE_PWA=true

# Optional Services
# ----------------

# Google Analytics
VITE_GA_TRACKING_ID=

# Sentry Error Tracking
VITE_SENTRY_DSN=